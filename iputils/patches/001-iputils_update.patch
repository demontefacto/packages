-	if (options & F_AUDIBLE) {
-		putchar('\a');
-		if(options & F_FLOOD)
-			fflush(stdout);
-	}
-	if (!(options & F_FLOOD)) {
-		putchar('\n');
-		fflush(stdout);
-	}
